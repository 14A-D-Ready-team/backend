{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/src/main.ts",
    "/src/repl.ts",
    "/src/environment.ts",
    "/src/app.module.ts"
  ],
  "collectCoverageFrom": ["./src/**/*.ts"]
}
